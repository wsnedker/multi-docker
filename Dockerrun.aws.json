{
  "AWSEBDockerrunVersion" : 2,
  "containerDefinitions":[
    {
      "name" : "client",
      "image" : "wsnedker/multi-client",
      "hostname" : "client",
      "essential" : false
    },
    {
      "name" : "server",
      "image" : "wsnedker/multi-server",
      "hostname" : "api",
      "essential" : false
    },
    {
      "name" : "worker",
      "image" : "wsnedker/multi-worker",
      "hostname" : "worker",
      "essential" : false
    },
    {
      "name" : "nginx",
      "image" : "wsnedker/multi-nginx",
      "hostname" : "nginx",
      "essential" : true,
      "portMappings" : [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links" : [
        "client",
        "server"
      ]
    }
  ]
}
